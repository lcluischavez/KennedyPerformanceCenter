@model KennedyPerformanceCenter.Models.ViewModels.VehicleFormViewModel

@{
    ViewData["Title"] = "Edit";

}

    <h1>Edit</h1>

    <h4>Vehicle</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="Make" class="control-label"></label>
                    <input asp-for="Make" class="form-control" />
                    <span asp-validation-for="Make" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Model" class="control-label"></label>
                    <input asp-for="Model" class="form-control" />
                    <span asp-validation-for="Model" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Year" class="control-label"></label>
                    <input asp-for="Year" class="form-control" />
                    <span asp-validation-for="Year" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Color" class="control-label"></label>
                    <input asp-for="Color" class="form-control" />
                    <span asp-validation-for="Color" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Miles" class="control-label"></label>
                    <input asp-for="Miles" class="form-control" />
                    <span asp-validation-for="Miles" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EngineType" class="control-label"></label>
                    <select asp-for="EngineTypeId" class="form-control" asp-items="@Model.EngineTypeOptions">
                        <option selected value="null" disabled> Please select a type</option>
                    </select>
                    <span asp-validation-for="EngineTypeId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DrivetrainType" class="control-label"></label>
                    <select asp-for="DrivetrainTypeId" class="form-control" asp-items="@Model.DrivetrainTypeOptions">
                        <option selected value="null" disabled> Please select a type</option>
                    </select>
                    <span asp-validation-for="DrivetrainTypeId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TransmissionType" class="control-label"></label>
                    <select asp-for="TransmissionTypeId" class="form-control" asp-items="@Model.TransmissionTypeOptions">
                        <option selected value="null" disabled> Please select a type</option>
                    </select>
                    <span asp-validation-for="TransmissionTypeId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="VIN" class="control-label"></label>
                    <input asp-for="VIN" class="form-control" />
                    <span asp-validation-for="VIN" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StockNumber" class="control-label"></label>
                    <input asp-for="StockNumber" class="form-control" />
                    <span asp-validation-for="StockNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ImagePath" class="control-label"></label>
                    <input asp-for="ImagePath" class="form-control" />
                    <span asp-validation-for="ImagePath" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
